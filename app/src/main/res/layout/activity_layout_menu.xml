<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout_menu"
    android:background="@color/colorLy2">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-200dp"
        tools:layout_editor_absoluteY="107dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/menu"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold">
        </TextView>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btnPersegi"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="50dp"
                    android:text="Persegi"
                    android:background="@mipmap/kotak"/>

                <Button
                    android:id="@+id/btnLingkaran"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="30dp"
                    android:text="Lingkaran"
                    android:background="@mipmap/bunder"/>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <Button
                    android:id="@+id/btnPP"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="50dp"
                    android:text="Persegi Panjang"
                    android:background="@mipmap/kotak_dowo"/>

                <Button
                    android:id="@+id/btnSetiga"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="30dp"
                    android:text="Segitiga"
                    android:background="@mipmap/segitelu"/>
            </TableRow>

            <Button
                android:id="@+id/btntrapesium"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:text="trapesium"
                android:background="@mipmap/kotakmiring"/>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="25dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnoff"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="bottom|end"
                android:background="@mipmap/off2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/kopi_tengen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="20180140050-Adelina Yoga Eka Safira"
                android:textSize="5pt"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>