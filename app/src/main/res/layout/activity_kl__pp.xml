<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_kl_PP">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="290dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/persegi_panjang_soal" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Keliling Persegi Panjang"
                android:textAlignment="center"
                android:textColor="@color/judul"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TableRow
                android:layout_height="80dp"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/PP_pj"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:text="Masukkan panjang :"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/msk_pj_PP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/txt" />

            </TableRow>
            <TableRow
                android:layout_height="80dp"
                android:layout_width="match_parent">
                <TextView
                    android:id="@+id/PP_lb"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:text="Masukkan Lebar:"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/msk_lb_PP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/txt" />
            </TableRow>

            <Button
                android:id="@+id/btnhitung_K_PP"
                android:layout_width="190dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Hitung keliling"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/hsl_K_PP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:text="hasil"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>