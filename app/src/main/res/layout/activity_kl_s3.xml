<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_kl_s3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/segitiga_soal" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Keliling Segitiga"
            android:textAlignment="center"
            android:textColor="@color/judul"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TableRow
            android:layout_height="70dp"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/Als_s3"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:text="Alas :"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/mskAls_s3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/txt" />

        </TableRow>
        <TableRow
            android:layout_height="70dp"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/TG_s3"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:text="Tinggi :"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/mskTG_s3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/txt" />

        </TableRow>
        <TableRow
            android:layout_height="70dp"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/MRG_s3"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:text="Miring:"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/mskMRG_s3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/txt" />

        </TableRow>

        <Button
            android:id="@+id/btnhitung_k_s3"
            android:layout_width="190dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Hitung Keliling"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/hsl_k_s3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:text="hasil"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>